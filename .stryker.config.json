{
  "$schema": "./node_modules/@stryker-mutator/core/schema/stryker-schema.json",
  "packageManager": "pnpm",
  "reporters": ["html", "clear-text", "progress", "dashboard"],
  "testRunner": "vitest",
  "coverageAnalysis": "perTest",
  "vitest": {
    "configFile": "vitest.config.ts"
  },
  "mutate": [
    "src/**/*.ts",
    "!src/**/*.d.ts",
    "!src/**/*.test.ts",
    "!src/**/__tests__/**"
  ],
  "thresholds": {
    "high": 80,
    "low": 60,
    "break": 50
  },
  "timeoutMS": 60000,
  "maxConcurrentTestRunners": 4,
  "ignorePatterns": [
    "node_modules",
    "dist",
    "coverage",
    "__tests__",
    "examples",
    "docs"
  ],
  "mutator": {
    "plugins": ["@stryker-mutator/typescript-checker"],
    "excludedMutations": [
      "StringLiteral",
      "BlockStatement"
    ]
  },
  "checkers": ["typescript"],
  "tsconfigFile": "tsconfig.json"
}
